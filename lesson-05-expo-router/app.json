{
	"expo": {
		"name": "lesson-05-expo-router",
		"slug": "lesson-05-expo-router",
		"version": "1.0.0",
		"orientation": "portrait",
		"icon": "./assets/icon.png",
		"userInterfaceStyle": "light",
		"splash": {
			"image": "./assets/splash.png",
			"resizeMode": "contain",
			"backgroundColor": "#ffffff"
		},
		"assetBundlePatterns": ["**/*"],
		"ios": {
			"supportsTablet": true
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/adaptive-icon.png",
				"backgroundColor": "#ffffff"
			}
		},
		"web": {
			"favicon": "./assets/favicon.png"
		},
		"plugins": [
			"expo-router",
			[
				"expo-font",
				{
					"fonts": [
						"./assets/fonts/BalsamiqSans-Regular.ttf",
						"./assets/fonts/BalsamiqSans-Bold.ttf",
						"./assets/fonts/BalsamiqSans-Italic.ttf",
						"./assets/fonts/BalsamiqSans-BoldItalic.ttf"
					]
				}
			]
		],
		"scheme": "lessonApp"
	}
}
